@model ContatoModel
@{
    ViewData["Title"] = "Editar Contatos";
}
<div class="text-center">

    <h2 class="display-4">Editar Contato</h2>

</div>

<form asp-controller="Contato" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome) <!--Validação-->
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail">
        @Html.ValidationMessageFor(x => x.Email) <!--Validação-->
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" id="celular" placeholder="Digite o celular" onkeyup="mascara('(##)#####-####',this,event,true)"maxlength="13">       
        @Html.ValidationMessageFor(x => x.Celular) <!--Validação-->
    </div>

     <div class="form-group">
        <label for="Cep">Cep</label>
        <input type="text" asp-for="Cep" class="form-control" id="Cep" placeholder="Digite o cep" onkeyup="mascara('#####-###',this,event,true)"maxlength="9">
        @Html.ValidationMessageFor(x => x.Cep) <!--Validação-->
    </div>

     <div class="form-group">
        <label for="Logradouro">Logradouro</label>
        <input type="text" asp-for="Logradouro" class="form-control" placeholder="Digite o Logradouro" id="Logradouro">
        @Html.ValidationMessageFor(x => x.Logradouro) <!--Validação-->
    </div>

     <div class="form-group">
        <label for="Complemento">Complemento</label>
        <input type="text" asp-for="Complemento" class="form-control" placeholder="Digite o Complemento" id="Complemento">
        @Html.ValidationMessageFor(x => x.Complemento) <!--Validação-->
     </div>

     <div class="form-group">
        <label for="Bairro">Bairro</label>
        <input type="text" asp-for="Bairro" class="form-control" placeholder="Digite o Bairro" id="Bairro">
        @Html.ValidationMessageFor(x => x.Bairro) <!--Validação-->
     </div>

     <div class="form-group">
        <label for="Localidade">Localidade</label>
        <input type="text" asp-for="Localidade" class="form-control" placeholder="Digite a Localidade" id="Localidade">
        @Html.ValidationMessageFor(x => x.Localidade) <!--Validação-->
      </div>

     <div class="form-group">
        <label for="Uf">Uf</label>
        <input type="text" asp-for="Uf" class="form-control" placeholder="Digite o uf" id="Uf" maxlength="2" oninput="this.value = this.value.toUpperCase()">
        @Html.ValidationMessageFor(x => x.Uf) <!--Validação-->
      </div>


    <button type="submit" class="btn btn-primary btn-block">Salvar alterações</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
